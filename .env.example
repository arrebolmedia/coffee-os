# Development environment variables
# Copy this file to .env.local and adjust values as needed

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL="postgresql://coffeeos:coffeeos123@localhost:5432/coffeeos_dev"
REDIS_URL="redis://localhost:6379"

# ===================================
# API CONFIGURATION
# ===================================
PORT=4000
NODE_ENV=development
API_URL=http://localhost:4000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ===================================
# EXTERNAL SERVICES
# ===================================

# Baserow Configuration
BASEROW_URL=http://localhost:8000
BASEROW_TOKEN=your-baserow-api-token

# n8n Configuration
N8N_URL=http://localhost:5678
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# ===================================
# INTEGRATIONS
# ===================================

# Twilio Configuration (WhatsApp/SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Mailrelay Configuration
MAILRELAY_API_KEY=your-mailrelay-api-key
MAILRELAY_API_URL=https://your-account.ip-zone.com/ccm/admin/api/version/2

# CFDI/PAC Configuration (Mexico)
PAC_ENVIRONMENT=sandbox
PAC_API_URL=https://sandbox.facturama.mx/api
PAC_USERNAME=your-pac-username
PAC_PASSWORD=your-pac-password

# ===================================
# PAYMENT PROVIDERS (MEXICO)
# ===================================

# Clip Configuration
CLIP_API_KEY=your-clip-api-key
CLIP_WEBHOOK_SECRET=your-clip-webhook-secret

# Mercado Pago Configuration
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key

# BBVA Configuration
BBVA_API_KEY=your-bbva-api-key
BBVA_SECRET_KEY=your-bbva-secret-key

# ===================================
# FILE STORAGE
# ===================================
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=coffeeos
MINIO_SECRET_KEY=coffeeos123
MINIO_BUCKET=coffeeos-files

# ===================================
# EMAIL CONFIGURATION
# ===================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@coffeeos.mx

# ===================================
# MONITORING & ANALYTICS
# ===================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_API_KEY=your-analytics-api-key

# ===================================
# FRONTEND APPS
# ===================================

# Next.js Apps
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_ENVIRONMENT=development

# PWA Configuration
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key-for-push-notifications

# ===================================
# SECURITY
# ===================================
ENCRYPTION_KEY=your-encryption-key-32-characters-long
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_OFFLINE_MODE=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGS=true